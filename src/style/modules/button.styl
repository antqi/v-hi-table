@import '../var.styl'
$border-primary-color = #FDCA9B
// 重置所有button默认样式
button {
  display inline-flex
  justify-content center
  align-items center
  border 2px solid $border-primary-color
  border-radius 16px
  background-color #fff
  border-color $primary-color
  font-family PingFangSC-Medium
  font-size 26px
  color $primary-color
  box-sizing border-box
}
.hi-btn {
  display inline-flex
  justify-content center
  align-items center
  padding 0 16px
  height 52px
  border 2px solid $border-primary-color
  border-radius 16px
  background-color #fff
  border-color $primary-color
  font-family PingFangSC-Medium
  font-size 26px
  color $primary-color
  letter-spacing 0
  &.btn-solid {
    border none
    background-color $primary-color
    color #fff
    &:disabled {
      color #bbb
      background-color #eee
    }
  }
  &.btn-primary {
    border-color $primary-color
    &:disabled {
      border-color #bbb
      color #bbb
    }
  }
  >.icon {
    display inline-block
    width 26px
    height 26px
    background-repeat no-repeat
    background-position center
    background-size cover
    margin-right 7px
  }
}
