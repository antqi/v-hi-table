@import '../var.styl'

@keyframes sliderIn {
  0% {
    width 0
  }
}
@keyframes sliderOut {
  100% {
    width 0
  }
}
.slider-in {
  animation sliderIn 0.3s ease-in-out
}
.slider-out {
  animation sliderOut 0.3s ease-in-out
}
.dialog-container {
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  width 100%
  height 100vh
  display flex
  align-items center
  justify-content center
  box-sizing border-box
  z-index 999
  overflow hidden
  display flex
  justify-content flex-end
  .content-body {
    width 50%
    height 100%
    background #FFFFFF
    box-shadow -3px 5px 12px 0 rgba(0, 0, 0, 0.17)
    border-radius 86px 0 0 86px
    box-sizing border-box
    display flex
    flex-direction column
    justify-content space-between
    padding 68px 0
    &.full-screen {
      width 100%
    }
    .header {
      position relative
      display flex
      align-items center
      justify-content center
      box-sizing border-box
      .title {
        position relative
        font-size 40px
        font-weight 600
        color #3b424c
        z-index 9
        &:before {
          content ''
          position absolute
          bottom 5px
          display inline-block
          width 100%
          height 22px
          background-color $primary-color
          opacity 0.5
          z-index 7
        }
      }
      .close {
        position absolute
        left 68px
        background-image url('images/close.png')
        background-size contain
        width 56px
        height 56px
      }
    }
    .body {
      flex 1
      padding-bottom 1.2rem
      box-sizing border-box
      overflow-y auto
      // min-height: 2.4rem;
      // height: 40rem;
    }
    .footer {
      flex 0 0 8rem
      height 8rem
      display flex
      justify-content space-around
      padding-top 2rem
      box-sizing border-box
      .btn {
        border-radius 1.8rem
        height 3.6rem
        line-height 3.6rem
        border none
        min-width 12rem
        color #fff
        background-color $primary-color
        font-size 1.6rem
      }
    }
  }
}